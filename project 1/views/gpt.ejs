        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            overflow-x: hidden; /* Ensure no horizontal scroll */
        }

        /* Left-side content styling */
        .left-side-content {
            width: 400px;
            padding: 20px;
            background-color: #212121;
            color: #ffffff;
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
