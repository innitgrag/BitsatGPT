        .left-side-content h2 {
            font-size: 24px;
            margin-bottom: 10px;
            display: inline-block; /* Allows inline alignment */
            vertical-align: middle; /* Aligns vertically with logo */
        }

        .left-side-content p {
            margin-bottom: 10px;
        }

        .left-side-content a {
            color: #106ba3;
            text-decoration: underline;
        }

        .left-side-content button {
            background-color: #106ba3;
            color: #ffffff;
            padding: 10px 20px;
            border-radius: 20px;
            cursor: pointer;
            margin-top: 20px;
            margin-left: 120px;
            margin-bottom: 10px;
            font-size: 16px;
            display: flex;
            justify-content: center;
        }

        .left-side-content button:hover {
            background-color: #005f8b;
        }

        /* Footer styling */
        .footer {
            text-align: center;
            padding-top: 10px;
            padding-bottom: 30px;
            font-size: 14px;
            border-top: 1px solid #333;
        }

        /* Webchat container styling */
        .webchat-container {
            margin-left: 420px;
        }

        /* Media queries for responsive design */
        @media (max-width: 1520px) {
            .left-side-content {
                transform: translateX(-100%);
            }

            .webchat-container {
                margin-left: 0;
                margin-top: 20px;
                padding: 10px;
            }

            .logout-icon {
                display: block !important; 
                /* Ensure it overrides any other styles */
            }
        }

        /* Logout icon */
        .logout-icon {
            display: none;
            position: fixed;
            top: 10px;
            left: 20px; /* Adjust position from left to right */
            cursor: pointer;
            z-index: 101; /* Ensure it's above sidebar */
        }
        
        /* Style for the logout button */
